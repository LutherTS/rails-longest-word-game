<h1>New game</h1>

<div class="letters">
  <% @letters.each do |letter| %>
    <div class="letter">
      <%= letter %>
    </div>
  <% end %>
</div>

<form action="/score" method="post" data-turbo="false">
  <!-- ... -->
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>
  <label for="response">What is the longest word you can find?</label>
  <br/>
  <input type="text" name="response" placeholder="Awaiting your response...">
  <input type="submit" value="Go!">
</form>
